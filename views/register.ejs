<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Page</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="./register.css">
</head>

<body>
    <header>
        <h1 id="title">Smartathon Registration</h1>
    </header>
    <main>
        <form action="/register" method="POST" id="registration-form">
            <div>
                <label id="name-label" for="name">Full Name</label>
                <input type="text" id="name" name="name" required placeholder="Enter your Name">
            </div>

            <div>
                <label id="email-label" for="email">Email</label>
                <input type="email" id="email" name="email" required placeholder="Enter your Email">
            </div>

            <div>
                <label for="phone">Enter your phone number:</label>
                <input type="number" id="phone" name="phone">

            </div>

            <div>
                <label for="gender"> Select you gender</label>
                <select name="gender">
                    <option value="none" selected>Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">other</option>
                </select>
            </div>

            <div>
                <label id="college-label" for="college">College Name</label>
                <input type="text" id="college-name" name="college" required placeholder="Enter your College Name">
            </div>

            <div>
                <label id="City" for="City">City</label>
                <input type="text" id="city-name" name="city" required placeholder="Enter City">
            </div>

            <div>
                <label for="psw">Set Password</label>
                <input type="password" id="psw" name="password" required>
            </div>

            <button type="submit" id="submit">Submit</button>
        </form>
    </main>
</body>

</html>